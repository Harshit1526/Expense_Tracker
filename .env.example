# Database and JWT (keep your existing values)
MONGODB_URI=Your MOngodb URl
JWT_SECRET=<your-jwt-secret>
PORT=5000

# Email Configuration
# Gmail SMTP server
SMTP_HOST=smtp.gmail.com
# Gmail SMTP port for TLS
SMTP_PORT=587
# Your Gmail address
SMTP_USER=<your-email-address>
# The App Password you generated (NOT your regular Gmail password)
SMTP_PASS=<your-app-password>
# The email address that will appear as the sender
SMTP_FROM=<your-email-address>

# Optional: Additional Security (recommended)
# Number of seconds until reset token expires (3600 = 1 hour)
PASSWORD_RESET_EXPIRES=3600
# Rate limiting for password reset attempts (per hour)
PASSWORD_RESET_LIMIT=3
